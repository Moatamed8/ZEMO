<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.OutgoingInvitationActivity"
    android:background="@drawable/background_meeting_invitation">
    <ImageView
        android:id="@+id/imageMeetingType"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:contentDescription="@string/app_name"
        android:tint="@color/colorTextIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textSendingInvitation"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/meduim"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/sending_meeting_invitation"
        android:textColor="@color/colorTextIcon"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/imageMeetingType"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:id="@+id/textFirstChar2"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryText"
            android:background="@drawable/background_meeting_invitation_icon"
            android:textSize="@dimen/_30sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textUserName2"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/colorTextIcon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textEmail2"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/regular"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textColor="@color/colorTextIcon"
            android:textSize="@dimen/_13sdp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/imageStopInvitation"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@drawable/background_reject_invitation"
        android:src="@drawable/ic_reject"
        android:padding="@dimen/_8sdp"
        android:contentDescription="@string/app_name"
        android:tint="@color/colorTextIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="ImageStopInvitationBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>